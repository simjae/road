{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/app/*": ["./app/*"],
            "@/assets/*": ["./assets/*"],
            "@/components/*": ["./components/*"],
            "@/constants/*": ["./constants/*"],
            "@/hooks/*": ["./hooks/*"],
            "@/scripts/*": ["./scripts/*"],
            "@/stores/*": ["./stores/*"],
            "@/styles/*": ["./styles/*"],
            "@/types/*": ["./types/*"],
            "@/utils/*": ["./utils/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
